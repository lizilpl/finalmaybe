                        <GradientStop Color="#FF6D2E6D" Offset="1" />
                        <GradientStop Color="#FF552455" Offset="0.787" />
                        <GradientStop Color="#FF421B42" Offset="0.612" />
                    </LinearGradientBrush>
                </Button.BorderBrush>
            </Button>
            <Button Content="EXIT" Height="90" HorizontalAlignment="Left" Margin="278,636,0,0" Name="button3" VerticalAlignment="Top" Width="185" Click="button3_Click" FontFamily="Andy" FontSize="50" />
        </Grid>
    </Grid>
</Window>
